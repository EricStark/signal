<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEFFFF"
            android:layout_marginTop="?attr/actionBarSize">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="欢  迎  使  用  信  号  处  理  A p p"
                android:textColor="#4B6DF9"
                android:textSize="47dp"
                android:padding="10dp"
                />
            <com.example.java.toolbarapplication.MarqueeTextView
                android:id="@+id/tv_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:text="welcome to use the best signal-operation-system.This APP can give you more direct view of signal!"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textStyle="italic"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/tv_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请设置你的手机类型"
                android:paddingLeft="40dp"
                android:layout_marginTop="30dp"
                android:textSize="25dp"
                android:textColor="#090909"
                android:textStyle="bold"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_below="@id/tv_en"
                android:src="@drawable/phone1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                app:civ_border_overlay="true"
                app:civ_border_color="@color/blue"/>
            <View
                android:id="@+id/div"
                android:layout_below="@id/tv_phone"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wave"
                android:text="S  u  b  m  i  t"
                android:textSize="25dp"
                android:layout_marginTop="40dp"
                android:textStyle="italic"
                android:background="#44FFFF"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"/>
            <com.example.java.toolbarapplication.Welcome_SimpleChartView
                android:id="@+id/wave"
                android:layout_below="@id/div"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="230dp" />
        </RelativeLayout>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        </android.support.v7.widget.Toolbar>
    </FrameLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:theme="@style/myNavigationDrawerStyle"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_haeder">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
